{
  "printWidth": 120,
  "singleQuote": false,
  "semi": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@ianvs/prettier-plugin-sort-imports",
    "@typespec/prettier-plugin-typespec"
  ],
  "tailwindConfig": "packages/config-tailwind/tailwind.config.ts",

  "importOrder": ["^[a-z]", "", "^@/(.*)$", "^@(.*)/(.*)$", "", "^[./]", "", "^.*\\.(css)$"],
  "importOrderParserPlugins": ["typescript", "jsx", "tsx"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "quoteProps": "preserve",
  "overrides": [{ "files": "*.tsp", "options": { "parser": "typespec" } }]
}
